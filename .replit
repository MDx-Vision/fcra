modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["stripe:1.0.0", "twilio:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["alsa-lib", "at-spi2-atk", "at-spi2-core", "atk", "cairo", "cargo", "cups", "cypress", "dbus", "expat", "freetype", "gdk-pixbuf", "gitFull", "glibcLocales", "gtk3", "imagemagick_light", "libdrm", "libiconv", "libnotify", "libxcrypt", "libxkbcommon", "mesa", "nss", "openssl", "pango", "pkg-config", "playwright-driver", "poppler-utils", "rustc", "systemd", "xorg.libXScrnSaver", "xorg.libXcomposite", "xorg.libXcursor", "xorg.libXdamage", "xorg.libXi", "xorg.libXrandr", "xorg.libXtst", "xorg.libxkbfile", "xvfb-run", "xorg.libX11", "xorg.libXext", "xorg.libXfixes", "xorg.libxcb", "glib", "nspr", "xorg.libxshmfence", "libgbm", "nano", "please"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=4", "app:app"]
