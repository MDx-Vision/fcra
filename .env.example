# =============================================================================
# FCRA Litigation Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# CORE SETTINGS (Required)
# -----------------------------------------------------------------------------

# Flask secret key for session encryption (auto-generated if not set)
FLASK_SECRET_KEY=your-secret-key-here

# Flask environment: development, production, testing
FLASK_ENV=development

# Enable debug mode (true/false)
FLASK_DEBUG=false

# Server port
PORT=5000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------

# PostgreSQL connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/fcra_db

# -----------------------------------------------------------------------------
# AI / ANTHROPIC (Required for AI features)
# -----------------------------------------------------------------------------

# Anthropic API key for Claude AI
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# EMAIL - SENDGRID (Optional - for email notifications)
# -----------------------------------------------------------------------------

# SendGrid API key
SENDGRID_API_KEY=SG....

# Sender email address
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Sender name
SENDGRID_FROM_NAME=FCRA Litigation Platform

# -----------------------------------------------------------------------------
# SMS - TWILIO (Optional - for SMS notifications)
# -----------------------------------------------------------------------------

# Twilio account SID
TWILIO_ACCOUNT_SID=AC...

# Twilio auth token
TWILIO_AUTH_TOKEN=...

# Twilio phone number (E.164 format: +1234567890)
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# PAYMENTS - STRIPE (Optional - for payment processing)
# -----------------------------------------------------------------------------

# Stripe secret key
STRIPE_SECRET_KEY=sk_...

# Stripe webhook signing secret
STRIPE_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# CERTIFIED MAIL - SENDCERTIFIED (Optional)
# -----------------------------------------------------------------------------

# SendCertifiedMail API key
SENDCERTIFIEDMAIL_API_KEY=...

# SFTP credentials for letter upload
SENDCERTIFIED_SFTP_HOST=sftp.sendcertifiedmail.com
SENDCERTIFIED_SFTP_USERNAME=...
SENDCERTIFIED_SFTP_PASSWORD=...
SENDCERTIFIED_SFTP_PORT=22

# -----------------------------------------------------------------------------
# CREDIT MONITORING SERVICES (Optional)
# -----------------------------------------------------------------------------

# SmartCredit
SMARTCREDIT_API_KEY=...

# IdentityIQ
IDENTITYIQ_API_KEY=...
IDENTITYIQ_API_SECRET=...

# Experian
EXPERIAN_API_KEY=...
EXPERIAN_CLIENT_ID=...
EXPERIAN_CLIENT_SECRET=...
EXPERIAN_SUBSCRIBER_CODE=...

# -----------------------------------------------------------------------------
# NOTARIZATION - PROOF/NOTARIZE (Optional)
# -----------------------------------------------------------------------------

# Notarize/Proof API key
NOTARIZE_API_KEY=...
# Alternative: PROOF_API_KEY=...

# Webhook signing secret
NOTARIZE_WEBHOOK_SECRET=...

# Use sandbox environment (true/false)
NOTARIZE_SANDBOX=true

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------

# Fernet encryption key for sensitive data (32 bytes, base64 encoded)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FCRA_ENCRYPTION_KEY=...

# -----------------------------------------------------------------------------
# RATE LIMITING (Optional - defaults shown)
# -----------------------------------------------------------------------------

RATE_LIMIT_DEFAULT=200 per minute
RATE_LIMIT_AUTH=5 per minute
RATE_LIMIT_API=100 per minute
RATE_LIMIT_ANALYSIS=10 per minute
